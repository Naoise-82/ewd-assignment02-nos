<div class="uk-flex uk-flex-center uk-flex-middle uk-grid-small" uk-grid>
  {{> title-card title="View POUI" subTitle="A detailed view of your POUI"}}
  {{> main-menu }}
</div>
<div class="uk-margin uk-width-2-3@m uk-margin-auto uk-card uk-card-default uk-card-body uk-box-shadow-large">
  <div class="uk-heading-small uk-text-center">
    {{name}}
  </div>
  <div class="uk-grid-medium uk-card-default uk-padding-small uk-margin-auto uk-text-center" uk-grid>
    <div class="uk-width-expand uk-padding-remove-left">
      <p class="uk-text-large"><b>Category</b><br> {{category}}</p>
    </div>
    <div class="uk-width-expand uk-padding-remove-left">
      <p class="uk-text-large"><b>Location</b><br> {{lat}}, {{lng}}</p>
    </div>
  </div>

  <div class="uk-text-center uk-margin uk-margin-auto uk-card-default uk-width-1-3@s">
    <p class="uk-margin-remove-bottom"><b>Ratings</b></p>
    <i class="fas fa-thumbs-up fa-lg uk-padding-small"> {{thumbsUp}} </i>
    <i class="fas fa-thumbs-down fa-lg uk-padding-small"> {{thumbsDown}} </i>
  </div>

  <div class="uk-card-default uk-padding-small uk-margin-auto">
    <p class="uk-text-large uk-text-center"><b>Creator</b><br> {{creator}}</p>
    <p class="uk-text-large uk-margin-remove-bottom uk-padding-remove-bottom"><b>Description</b></p><br>
    <p>{{description}}</p>
  </div>

  <div class="uk-margin uk-margin-auto uk-width-1-2@s uk-text-center uk-card-default uk-padding-small">
    <img alt="poui image" src="{{imageURL}}" />
  </div>

  <table class="uk-width uk-table-small uk-padding-small">
    <thead>
      <th class="uk-text-centre uk-text-large">
        Reviews
      </th>
    </thead>
    <tbody class="uk-text-left">
      {{#each reviews}}
      <tr>
        <td class="uk-margin uk-card uk-card-default uk-card-body uk-box-shadow-medium">
          <b>{{reviewer}}:<br> </b><em>"{{comment}}"</em>
        </td>
      </tr>
      {{/each}}
    </tbody>
  </table>
</div>