<div class="uk-flex uk-flex-center uk-flex-middle uk-grid-small" uk-grid>
  {{> title-card title="View POUI" subTitle="A detailed view of your POUI"}}
  {{> main-menu }}
</div>
<div class="uk-margin uk-width-2xlarge uk-margin-auto uk-card uk-card-default uk-card-body uk-box-shadow-large">
  <p><b>Name:</b><br> {{name}}</p>
  <p><b>Category:</b><br> {{category}}</p>
  <p><b>Location:</b><br> {{lat}}, {{lng}}</p>
  <p><b>Description:</b><br> {{description}}</p>
  <p><b>Creator:</b><br> {{creator}}</p>
  <p><b>Image:</b></p>
  <center><img width="100px" alt="poui image" src="{{imageURL}}" /></center>
  <table>
    <thead>
      <th>
        Comments
      </th>
    </thead>
    <tbody class="uk-text-left">
      {{#each comments}}
      <tr>
        <td>
          {{user}}
        </td>
      </tr>
      {{/each}}
    </tbody>
  </table>

</div>